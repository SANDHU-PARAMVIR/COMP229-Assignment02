        <div class="row w-100 mx-0">
                <!--First welcoming block of content-->
                <div class="col-12 px-0" id="unit1">
                        <div class="container">              
                                <% if(title == "Home" || title == "Services") {%>
                                <span class="odd"><h1 class="display-3">Welcome to the <%= title %> page</h1></span>
