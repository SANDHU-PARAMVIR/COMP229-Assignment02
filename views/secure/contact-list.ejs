<%- include('../partials/header.ejs') -%>
    <%- include('../partials/main_nav.ejs')-%>

    <main class="container">
        <h1 class="display-4 text-center">Business Contacts</h1>
        <hr><br>
        <br>
        <div class="row">            
            <div class="offset-md-1 col-md-10">  
                <table class="table table-striped table-bordered">
                    <thead class="purple table-dark">
                        <tr>
                            <th scope="col" class="text-center">Name</th>
                            <th scope="col" class="text-center">Contact Number</th>
                            <th scope="col" class="text-center">Email</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
        
                        <% for(let count=0; count < contacts.length; count++) { %>
        
                        <tr>
                            <td class="text-center"><%= contacts[count].contactName %></td>
                            <td><%= contacts[count].contactNumber %></td>
                            <td><%= contacts[count].email %></td>
                            <td class="text-center">
                                <a href="/contact-list/update/<%= contacts[count]._id %>/" class="btn btn-primary btn-md">
                                    <i class="fas fa-edit"></i> Update</a>
                            </td>
                            <td class="text-center">
                                <a href="/contact-list/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-md">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>                    
                    <% } %>
        
                    </tbody>
                </table>    
            </div>
        </div>
    </main>


    <%- include('../partials/bottom_nav.ejs')-%>
<%- include('../partials/footer.ejs') -%>
